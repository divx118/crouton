# Disable framebuffer compression when displaying natively.
# For haswell it can stay enabled if 20-intel-crouton.conf
# which enables sna accelaration and set TearFree to true.
fbc='/sys/module/i915/parameters/i915_enable_fbc'
intel='/usr/share/X11/xorg.conf.d/20-intel-crouton.conf'
if [ -w "$fbc" ] && [ ! -L "$intel" ]; then
    echo 0 > "$fbc"
fi

XMETHOD='x11'
XARGS='-nolisten tcp'
if [ -f /etc/crouton/xserverrc-local ]; then
    . /etc/crouton/xserverrc-local
fi

exec /usr/bin/X $XARGS "$@"
